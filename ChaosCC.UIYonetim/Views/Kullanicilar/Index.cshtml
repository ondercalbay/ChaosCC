@model IEnumerable<ChaosCC.Dto.KullaniciListDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function Sil(id) {
        if (confirm('Silmek istediğinize emin misiniz?')) {
            window.location = "/Kullanicilar/Delete/" + id;
        }
    }
</script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni", "Edit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyadi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyadi)
            </td>
            <td>
                <a class="btn btn-xs btn-primary" href=@("/Kullanicilar/Edit/"+item.Id)><i class="glyphicon glyphicon-pencil"></i></a>
                <a class="btn btn-xs btn-danger" href=@($"javascript:Sil({item.Id});" )><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>
