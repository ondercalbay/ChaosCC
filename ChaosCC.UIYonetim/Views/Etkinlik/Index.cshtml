@model IEnumerable<ChaosCC.Dto.EtkinlikListDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href=@("/Etkinlik/Edit/")><i class="glyphicon glyphicon-plus"></i> Yeni</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tarih)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EtlinlikTuru)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Tarih.ToString("dd.MM.yyyy")
        </td>
        <td>
            @item.EtlinlikTuru.ToString()
        </td>
        <td>
            @item.Yer.ToString()
        </td>
        <td>
            <a class="btn btn-xs btn-primary" href=@("/Etkinlik/Devamsizlik/" + item.Id)><i class="glyphicon glyphicon-pencil"></i></a>          
        </td>
        <td>
            <a class="btn btn-xs btn-primary" href=@("/Etkinlik/Edit/" + item.Id)><i class="glyphicon glyphicon-pencil"></i></a>
            <a class="btn btn-xs btn-danger" href=@("/Etkinlik/Delete/" + item.Id)><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
